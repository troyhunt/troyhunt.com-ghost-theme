{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}


{{#is "home"}}
{{! Header transparent}}
{{> header}}
{{else}}
{{! Header untransparent}}
{{> header-nocover}}
{{/is}}


{{#is "home"}}
    {{#foreach posts}}    
        {{#if @first}}
            {{! First artical }}
            <div class="article_feature_first-img container {{#if image}}" style="background-image: url({{image}}){{else}}"style="background-image: url({{@blog.cover}}){{/if}}">
                <div class="hover"></div>
                <article class="article_item_first wrap" itemscope itemtype="http://schema.org/BlogPosting" role="article">
                    <header class="post_head">
                        <h1><a href="{{url}}">{{title}}</a></h1>
                        <span class="post_info"><span>by</span> {{author}} <span>on </span>
                        <time datetime="{{date format="DD MMMM YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
                        </span>
                    </header>
                    <section>
                        <p class="post_text" itemprop="description">{{excerpt words="30"}}...
                            <a href="{{url}}" class="article_link-more i-arrowLink"></a>
                        </p>
                    </section>
                    {{#if tags}}
                    <footer class="post_tag">
                            {{#foreach tags}}
                            <a class="tag" href="{{url}}">{{name}}</a>
                            {{/foreach}}
                    </footer>
                    {{/if}}
                </article>
            </div>
        {{/if}}
    {{/foreach}}
{{else}}
{{/is}}


{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination">
    {{pagination}}
</div>

